{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true,
        "codeceptjs/codeceptjs": true
    },
    "extends": [
        "airbnb-base",
        "plugin:codeceptjs/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/no-extraneous-dependencies": "off",
        "no-console": "off",
        "no-underscore-dangle": "off",
        "no-restricted-globals": "off",
        "no-alert": "off",
        "linebreak-style": 0,
        "no-prototype-builtins": 0,
        "no-return-assign": 0,
        "no-unused-vars": 0,
        "consistent-return": 0
    },
    "plugins": ["codeceptjs"]
}
